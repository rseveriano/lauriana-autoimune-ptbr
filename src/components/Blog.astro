---
import { useTranslations } from '../i18n/utils';
import { content } from '../i18n/content';

interface Props {
    lang: 'pt' | 'en' | 'es';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const { posts } = content[lang];
---

<section id="blog" class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <span class="text-primary font-semibold tracking-wider uppercase">{t('blog.title')}</span>
            <h2 class="text-4xl md:text-5xl font-heading font-bold text-dark mt-2">
                {t('blog.subtitle')}
            </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            {posts.map((post) => (
                <a href={lang === 'pt' ? `/pt/blog/${post.slug}` : `/${lang}/blog/${post.slug}`} class="group cursor-pointer block">
                    <div class="rounded-3xl overflow-hidden mb-6 shadow-md group-hover:shadow-xl transition-all">
                        <img src={post.image} alt={post.title} class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-500" />
                    </div>
                    <div class="flex items-center gap-4 text-sm text-dark/60 mb-3">
                        <span>{post.date}</span>
                        <span class="w-1 h-1 bg-primary rounded-full"></span>
                        <span class="text-primary font-semibold">{t('blog.article_tag')}</span>
                    </div>
                    <h3 class="text-2xl font-heading font-bold text-dark mb-3 group-hover:text-primary transition-colors">
                        {post.title}
                    </h3>
                    <p class="text-dark/70 leading-relaxed mb-4">
                        {post.excerpt}
                    </p>
                    <span class="inline-flex items-center gap-2 text-primary font-bold group-hover:translate-x-2 transition-transform">
                        {t('blog.read_more')}
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                    </span>
                </a>
            ))}
        </div>
    </div>
</section>
