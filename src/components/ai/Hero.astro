---
import { aiTranslations } from '../../i18n/ai';

interface Props {
    lang: 'pt' | 'en' | 'es';
}

const { lang } = Astro.props;
const t = (key: keyof typeof aiTranslations['pt']) => aiTranslations[lang][key];
---

<section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden">
    <div class="container mx-auto px-6 relative z-10 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Text -->
        <div class="space-y-6">
            <span
                class="inline-block bg-brand-green/10 text-brand-green px-4 py-1 rounded-full text-sm font-bold tracking-wide uppercase">
                {t('hero.tag')}
            </span>
            <h1 class="text-4xl lg:text-6xl font-playfair font-bold leading-tight text-gray-900">
                {t('hero.title.prefix')} <span class="text-brand-green italic">{t('hero.title.highlight')}</span>{t('hero.title.suffix')}
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed">
                {t('hero.description.1')} <strong>{t('hero.description.highlight')}</strong> {t('hero.description.2')}
                {t('hero.description.3')}
            </p>
            <div class="pt-4 flex flex-col sm:flex-row gap-4">
                <a href="#oferta"
                    class="bg-brand-accent text-white text-center px-8 py-4 rounded-lg font-bold text-lg hover:bg-yellow-700 transition shadow-xl hover:shadow-2xl transform hover:-translate-y-1">
                    {t('hero.cta')}
                </a>
                <p class="text-sm text-gray-500 mt-2 sm:mt-0 flex items-center justify-center sm:justify-start">
                    <i class="ph ph-check-circle text-brand-green mr-2 text-xl"></i> {t('hero.spots')}
                </p>
            </div>
        </div>

        <!-- Hero Image -->
        <div class="relative">
            <img src="/ai/mulher.webp" alt="Woman with health and vitality after autoimmune treatment"
                class="w-full h-[400px] lg:h-[500px] object-cover rounded-4xl shadow-2xl" loading="eager"
                width="800" height="600">

            <!-- Decoration -->
            <div
                class="absolute bottom-0 left-0 md:-bottom-6 md:-left-6 bg-white p-4 rounded-lg shadow-lg max-w-xs block border-l-4 border-brand-green">
                <p class="font-bold text-gray-800">{t('hero.quote')}</p>
                <div class="flex text-brand-gold mt-1">
                    <i class="ph ph-star-fill"></i><i class="ph ph-star-fill"></i><i class="ph ph-star-fill"></i><i
                        class="ph ph-star-fill"></i><i class="ph ph-star-fill"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Background Shape -->
    <div class="absolute top-0 right-0 -z-10 opacity-10">
        <svg width="600" height="600" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
            <path fill="#3B755F"
                d="M44.7,-76.4C58.9,-69.2,71.8,-59.1,81.6,-46.6C91.4,-34.1,98.1,-19.2,95.8,-5.3C93.5,8.6,82.2,21.5,71.1,32.4C60,43.3,49.1,52.2,37.4,59.7C25.7,67.2,13.2,73.3,-0.3,73.8C-13.8,74.3,-26.6,69.2,-38.7,61.6C-50.8,54,-62.2,43.9,-70.5,31.5C-78.8,19.1,-84,4.4,-81.7,-9.1C-79.4,-22.6,-69.6,-34.9,-58.2,-44.3C-46.8,-53.7,-33.8,-60.2,-20.9,-68.1C-8,-76,-1.5,-85.3,44.7,-76.4Z"
                transform="translate(100 100)" />
        </svg>
    </div>
</section>
