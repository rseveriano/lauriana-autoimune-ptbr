---
import { aiTranslations } from '../../i18n/ai';

interface Props {
    lang: 'pt' | 'en' | 'es';
}

const { lang } = Astro.props;
const t = (key: keyof typeof aiTranslations['pt']) => aiTranslations[lang][key];

const waMessage = t('whatsapp.message');
const waLink = `https://wa.me/5561995021067?text=${encodeURIComponent(waMessage)}`;
---

<footer class="bg-brand-dark text-white py-12 border-t border-gray-800">
    <div class="container mx-auto px-6 text-center">
        <h3 class="text-2xl font-playfair font-bold mb-2">{t('footer.bio')}</h3>
        <p class="text-brand-sage/60 max-w-lg mx-auto mb-8">
            {t('footer.text')}
        </p>
        <div class="flex justify-center space-x-6 mb-8">
            <a href="https://instagram.com/lauriananutri" class="text-gray-400 hover:text-white transition"><i class="ph ph-instagram-logo text-2xl"></i></a>
            <a href={waLink} target="_blank" class="text-gray-400 hover:text-white transition"><i class="ph ph-whatsapp-logo text-2xl"></i></a>
            <a href="mailto:info@atypicalbrains.win" class="text-gray-400 hover:text-white transition"><i class="ph ph-envelope-simple text-2xl"></i></a>
        </div>
        <p class="text-gray-500 text-sm">
            {t('footer.copyright')}
        </p>
    </div>
</footer>
