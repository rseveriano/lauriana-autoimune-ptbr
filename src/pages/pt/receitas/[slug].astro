---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { content } from '../../../i18n/content';

export function getStaticPaths() {
  return content.pt.recipes.map(recipe => ({
    params: { slug: recipe.slug },
    props: { recipe },
  }));
}

const { recipe } = Astro.props;
---

<Layout title={`${recipe.title} | Lauriana Nutricionista`} lang="pt">
    <Header lang="pt" />
    
    <main class="pt-32 pb-20 min-h-screen bg-secondary/30">
        <div class="container mx-auto px-4">
            <a href="/#recipes" class="inline-flex items-center gap-2 text-primary font-semibold mb-8 hover:text-primary/80 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-left"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
                Voltar para Receitas
            </a>

            <article class="bg-white rounded-3xl shadow-xl overflow-hidden max-w-4xl mx-auto">
                <div class="h-64 md:h-96 relative">
                    <img src={recipe.image} alt={recipe.title} class="w-full h-full object-cover" />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                    <div class="absolute bottom-0 left-0 p-8 text-white">
                        <div class="flex gap-2 mb-4">
                            {recipe.tags.map(tag => (
                                <span class="bg-primary/90 px-3 py-1 rounded-full text-sm font-medium backdrop-blur-sm">
                                    {tag}
                                </span>
                            ))}
                        </div>
                        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-2">{recipe.title}</h1>
                    </div>
                </div>

                <div class="p-8 md:p-12">
                    <div class="flex flex-wrap gap-6 mb-12 text-dark/70 border-b border-secondary pb-8">
                        <div class="flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock text-primary"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                            <span class="font-medium">{recipe.prepTime}</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-users text-primary"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                            <span class="font-medium">{recipe.servings}</span>
                        </div>
                    </div>

                    <div class="grid md:grid-cols-2 gap-12">
                        <div>
                            <h2 class="text-2xl font-heading font-bold text-primary mb-6 flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shopping-basket"><path d="m5 11 4-7"/><path d="m19 11-4-7"/><path d="M2 11h20"/><path d="m3.5 11 1.6 7.4a2 2 0 0 0 2 1.6h9.8c.9 0 1.8-.7 2-1.6l1.7-7.4"/><path d="m9 11 1 9"/><path d="m4.5 11 .1 8.1"/><path d="m19.5 11-.1 8.1"/><path d="m15 11-1 9"/></svg>
                                Ingredientes
                            </h2>
                            <ul class="space-y-3">
                                {recipe.ingredients.map(ingredient => (
                                    <li class="flex items-start gap-3 text-dark/80">
                                        <span class="w-2 h-2 bg-accent rounded-full mt-2 shrink-0"></span>
                                        <span>{ingredient}</span>
                                    </li>
                                ))}
                            </ul>
                        </div>

                        <div>
                            <h2 class="text-2xl font-heading font-bold text-primary mb-6 flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chef-hat"><path d="M6 13.87A4 4 0 0 1 7.41 6a5.11 5.11 0 0 1 1.05-1.54 5 5 0 0 1 7.08 0A5.11 5.11 0 0 1 16.59 6 4 4 0 0 1 18 13.87V21H6Z"/><line x1="6" x2="18" y1="17" y2="17"/></svg>
                                Modo de Preparo
                            </h2>
                            <ol class="space-y-6">
                                {recipe.instructions.map((step, index) => (
                                    <li class="flex gap-4 text-dark/80">
                                        <span class="w-8 h-8 bg-primary/10 text-primary font-bold rounded-full flex items-center justify-center shrink-0">
                                            {index + 1}
                                        </span>
                                        <p class="mt-1">{step}</p>
                                    </li>
                                ))}
                            </ol>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </main>

    <Footer lang="pt" />
</Layout>
